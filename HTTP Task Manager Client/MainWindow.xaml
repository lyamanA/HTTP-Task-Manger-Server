<Window x:Class="HTTP_Task_Manager_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTTP_Task_Manager_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="347" Width="520" ResizeMode="NoResize">
    <Grid>
        <Button Content="Get Processes" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="120" Height="30" Click="GetProcesses_Click" Margin="42,0,0,0"/>
        <ListBox Name="ProcessList" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" VerticalAlignment="Top" 
                 Width="480"/>
        <Button Content="Kill Process" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,250,0,0" Width="120" Height="30" Click="KillProcess_Click"/>
        <TextBox Name="NewTaskTextBox" HorizontalAlignment="Left" Height="30" 
                 Margin="140,250,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Run Task" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="350,250,0,0" Width="120" Height="30" Click="RunTask_Click"/>

    </Grid>
</Window>
